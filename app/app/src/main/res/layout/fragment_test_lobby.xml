<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".TestLobbyFragment"
    android:background="@color/md_theme_surface"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/nama_matakuliah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:text="Pemrograman Perangkat Mobile"
        android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
        />
    <ImageView
        android:id="@+id/gambar_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="250sp"
        android:src="@drawable/thumbnail"
        android:scaleType="centerCrop"
        android:layout_below="@+id/nama_matakuliah"
        />
    <TextView
        android:id="@+id/nama_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gambar_thumbnail"
        android:layout_margin="10sp"
        android:text="Ujian Tengah Semester"
        android:textAlignment="center"
        style="@style/TextAppearance.Material3.HeadlineLarge"/>
    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/divider_nama_test"
        android:layout_below="@+id/nama_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tanggal_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20sp"
        android:layout_marginVertical="5sp"
        android:layout_below="@+id/divider_nama_test"
        android:text="Jumlah Soal : 5"
        style="@style/TextAppearance.Material3.BodyLarge"
        />
    <TextView
        android:id="@+id/waktu_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20sp"
        android:layout_marginVertical="5sp"
        android:layout_below="@+id/tanggal_test"
        android:text="Jumlah Soal : 5"
        style="@style/TextAppearance.Material3.BodyLarge"
        />

    <TextView
        android:id="@+id/durasi_test"
        style="@style/TextAppearance.Material3.BodyLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/waktu_test"
        android:layout_marginVertical="5sp"
        android:layout_marginStart="5sp"
        android:layout_marginTop="5sp"
        android:layout_marginEnd="5sp"
        android:layout_marginBottom="5sp"
        android:text="Jumlah Soal : 5" />
    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/divider_deskripsi_test"
        android:layout_below="@+id/durasi_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="20sp"
        >
        <Button
            android:id="@+id/mulai_btn"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="20sp"
            android:layout_centerHorizontal="true"
            android:text="Mulai"
            style="@style/Widget.Material3.Button.IconButton.Filled"
            />
    </RelativeLayout>
</RelativeLayout>
</FrameLayout>