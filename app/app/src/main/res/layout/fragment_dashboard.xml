<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".DashboardFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10sp">

        <!-- MaterialCardView with greeting -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/selamat_datang"
                    style="@style/TextAppearance.Material3.BodyLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Selamat Datang! "
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/nama_mahasiswa"
                    style="@style/TextAppearance.Material3.BodyMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/selamat_datang"
                    android:text="Nama Mahasiswa" />

            </RelativeLayout>

            <ImageView
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_gravity="end"
                android:layout_margin="15sp"
                android:src="@drawable/profile" />

            <!-- Content for card 1 -->
        </com.google.android.material.card.MaterialCardView>

        <!-- Riwayat Kehadiran -->
        <LinearLayout
            android:id="@+id/subjudul_riwayat_kehadiran"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_1"
            android:layout_marginStart="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="10sp"
            android:layout_marginBottom="10sp"
            android:gravity="center_vertical">

            <!-- Judul -->
            <TextView
                android:id="@+id/judul_kehadiran"
                style="@style/TextAppearance.Material3.BodyLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Riwayat Kehadiran"
                android:textStyle="bold" />

            <!-- Tombol View All -->
            <TextView
                android:id="@+id/view_all_kehadiran"
                style="@style/TextAppearance.Material3.BodyMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:text="View All"
                android:textStyle="bold"
                android:layout_marginStart="150dp"/>
        </LinearLayout>

        <!-- RecyclerView untuk Riwayat Kehadiran -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_kehadiran"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:layout_below="@id/subjudul_riwayat_kehadiran"
            android:padding="8dp"
            android:background="@android:color/white" />

        <!-- Riwayat Ujian -->
        <LinearLayout
            android:id="@+id/subjudul_riwayat_ujian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/recycler_kehadiran"
            android:layout_marginStart="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="10sp"
            android:layout_marginBottom="10sp"
            android:gravity="center_vertical">

            <!-- Judul -->
            <TextView
                android:id="@+id/judul_ujian"
                style="@style/TextAppearance.Material3.BodyLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Riwayat Ujian"
                android:textStyle="bold" />

            <!-- Tombol View All -->
            <TextView
                android:id="@+id/view_all_ujian"
                style="@style/TextAppearance.Material3.BodyMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:text="View All"
                android:textStyle="bold"
                android:layout_marginStart="190dp"/>
        </LinearLayout>

        <!-- RecyclerView untuk Riwayat Ujian -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_ujian"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:layout_below="@id/subjudul_riwayat_ujian"
            android:padding="8dp"
            android:background="@android:color/white" />

    </RelativeLayout>
</FrameLayout>

