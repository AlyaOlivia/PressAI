<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Soal">
    <RelativeLayout
        android:id="@+id/container_soal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10sp"
        >
        <TextView
            android:id="@+id/nama_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="Pemrograman Perangkat Mobile"
            android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall">
        </TextView>
        <LinearLayout
            android:id="@+id/timer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nama_test"
            android:layout_marginTop="10sp"
            android:gravity="end"
            >
            <TextView
                android:id="@+id/countdown_minute"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:background="@drawable/round_rectangle"
                android:text="00"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:layout_marginStart="5sp"
                android:layout_marginEnd="5sp"/>
            <TextView
                android:id="@+id/countdown_second"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:background="@drawable/round_rectangle_secondary"
                android:text="00"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"/>

        </LinearLayout>

        <TextView
            android:id="@+id/soal_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/timer"
            android:layout_marginTop="10sp"
            android:text="Pertanyaan"
            android:textAppearance="@style/TextAppearance.Material3.BodyLarge">
        </TextView>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/jawaban"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/soal_test"
            android:layout_marginTop="10sp"
            android:hint="Jawaban"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="5sp"
            >
            <Button
                android:id="@+id/btn_sebelumnya"
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:text="Sebelumnya"
                android:layout_alignParentStart="true"
                style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                />
            <Button
                android:id="@+id/btn_selanjutnya"
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="Selanjutnya"
                style="@style/Widget.Material3.Button.IconButton.Filled"
                />
        </RelativeLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>